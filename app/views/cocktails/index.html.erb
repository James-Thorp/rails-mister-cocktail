<div class="full-container" style="background-image: url('https://images.unsplash.com/photo-1509807995916-c332365e2d9e?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=4c8d364e633e2015fbac047f327ce098&auto=format&fit=crop&w=500&q=60'); background-size: cover; background-repeat: no-repeat;">
  <div class="flex">
  <img src='https://cocktailsanddreams.co.in/wp-content/uploads/2018/01/cdn1-logo.gif'>
  <h1><em>Menu</em></h1>
</div>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-sm-4">
      <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(100,100,100,0.6) 50%), url('https://images.unsplash.com/photo-1531387367216-681093c0279b?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=73ca72de11ae9cd2fa7367dc1ee76705&auto=format&fit=crop&w=500&q=60');">


        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <p class="card-text"></p>
        </div>
        <div class="card-body">
          <%= link_to "Details", cocktail_path(cocktail), class: "btn btn-success" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

