<div class="container">
<h1><%= @cocktail.name %> Details </h1>

<h5>Works best with:</h5>
<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> of <%= dose.ingredient.name %> <i class="fas fa-thumbs-up"></i></p>
<% end %>
<h5>Add Ingredients to this cocktail..</h5>
<%= simple_form_for([@cocktail, @dose]) do |f| %>



  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
<br>
<%= link_to "Delete", cocktail_path(@cocktail), method: :delete, class: "btn btn-danger"%>
</div>
