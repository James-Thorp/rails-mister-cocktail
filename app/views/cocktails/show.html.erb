<div class="container">
  <h1><%= @cocktail.name %> Details </h1>

  <h5>Works best with:</h5>
  <% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> of <%= dose.ingredient.name %> <i class="fas fa-thumbs-up"></i></p>
  <% end %>
  <h5>Add Ingredients to this cocktail below</h5>
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, id: "sweet-alert-demo", class: "btn btn-success" %>
  </div>
  <% end %>
  <br>
  <a href="#" id="delete" class="btn btn-danger">Delete</a>
  <%= link_to "Delete", cocktail_path(@cocktail), method: :delete, id: "sweet-alert-danger", class: "btn btn-danger go-away" %>
</div>


