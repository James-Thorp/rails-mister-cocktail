<h1><%= @cocktail.name %> Page </h1>

<h5><%= @cocktail.name %></h5>
<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %>of <%= dose.ingredient.name %></p>
<% end %>
<%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Delete", cocktail_path(@cocktail), method: :delete, class: "btn btn-danger"%>

<%= simple_form_for([@cocktail, @dose]) do |f| %>



  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
